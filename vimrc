syntax on
set esckeys visualbell noerrorbells
set nocompatible
set backspace=indent,eol,start
set hlsearch incsearch
set wildmenu
set showcmd
set number ruler
set autoindent
set cindent
set showmatch
set viminfo='20,\"50
set history=100
set tabstop=4
set shiftwidth=4
set expandtab
set nobackup
set mouse=a
set winminheight=0
set foldmethod=marker
colorscheme default

map <C-J> <C-W>j<C-W>_
map <C-K> <C-W>k<C-W>_

nnoremap <F7> :noh<CR>
